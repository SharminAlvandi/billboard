<table class="table text-center">
  <thead class="thead-light">
    <tr>
      <th scope="col">Image</th>
      <th scope="col">Title</th>
      <th scope="col">Store</th>
     <!-- <th scope="col">link</th> -->
      <th scope="col">Description</th>
      <th scope="col">Effective</th>
      <th scope="col">Expiration</th>
      <th scope="col">Collection</th>
      <th scope="col" colspan="3"></th>
      
    </tr>
  </thead>

  <tbody>
    <% @advertisements.each do |advertisement| %>
      <tr>
        <td><%= image_tag(advertisement.image_url, size: "160x100", alt: "Ad Image")%></td>
        <td><%= advertisement.title %></td>
        <% @store = Store.find(advertisement.store_id)%>
        <td><%= @store.title %></td>
        <!--<td><a class="alert-link" href="<%= advertisement.product_url %>" target="_blank">SHOP NOW</a></td>-->
        <td><%= advertisement.description %></td>
        <td><%= advertisement.effective_date.strftime('%Y-%m-%d') %></td>
        <td><%= advertisement.expiration_date.strftime('%Y-%m-%d') %></td>
        <% @collection = Collection.find(advertisement.collection_id)%>
        <td><%= @collection.title %></td>
        
        <td><%= link_to 'Show', advertisement, :class => 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_advertisement_path(advertisement), :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', advertisement, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>