<p id="notice"><%= notice %></p>

<h1>Advertisements</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Store</th>
      <th>Product url</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Collection</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advertisements.each do |advertisement| %>
      <tr>
        <td><%= advertisement.title %></td>
        <td><%= advertisement.store_id %></td>
        <td><a href="<%= advertisement.product_url %>" target="_blank">SHOP NOW</a></td>
        <td><%= advertisement.description %></td>
        <td><%= advertisement.image_url %></td>
        <td><%= advertisement.collection_id %></td>
        <td><%= link_to 'Show', advertisement %></td>
        <td><%= link_to 'Edit', edit_advertisement_path(advertisement) %></td>
        <td><%= link_to 'Destroy', advertisement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Advertisement', new_advertisement_path %>
